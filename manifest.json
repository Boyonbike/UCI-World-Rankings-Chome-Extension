{
    "manifest_version": 3,
    "name": "UCI World Rankings Tool",
    "version": "1.0",
    "description": "A tool to filter and modify the uci world rankings.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://dataride.uci.ch/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}